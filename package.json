{
  "name": "express-server",
  "version": "0.0.1",
  "description": "expressの動作検証用",
  "keywords": [],
  "homepage": "https://github.com/Himenon/express-server#readme",
  "bugs": {
    "url": "https://github.com/Himenon/express-server/issues"
  },
  "repository": "Himenon/express-server",
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
    "url": "https://github.com/Himenon"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "yarn clean && tsc -p ./tsconfig.build.json",
    "build:watch": "yarn build -w",
    "ci:notify:release": "ts-node ./scripts/notify.ts",
    "clean": "rimraf ./lib",
    "cruiser": "dependency-cruiser --validate .dependency-cruiser.js src",
    "develop": "run-p build:watch server:watch",
    "format": "yarn lint --fix && prettier --write \"**/*.{ts,tsx,js,jsx,json,yml,yaml,html,md}\"",
    "lint": "eslint -c ./.eslintrc.js 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "server": "node ./lib/server.js",
    "server:watch": "nodemon ./lib/server.js",
    "start": "yarn develop",
    "test": "yarn cruiser && yarn test:jest",
    "test:ci": "yarn test && codecov",
    "test:jest": "jest -c ./jest.config.json",
    "test:watch": "yarn test:jest --watch",
    "version_up": "lerna version --yes"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "codecov": "^3.6.1",
    "dependency-cruiser": "^5.3.2",
    "eslint": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "generate-changelog": "^1.8.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.24.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  }
}
