{
  "name": "express-server",
  "version": "0.0.1",
  "private": true,
  "description": "express starter kit",
  "keywords": [],
  "homepage": "https://github.com/Himenon/express-server#readme",
  "bugs": {
    "url": "https://github.com/Himenon/express-server/issues"
  },
  "repository": "Himenon/express-server",
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
    "url": "https://github.com/Himenon"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "scripts": {
    "clean": "del dist lib",
    "develop": "pnpm run ts:esm ./src/entry.ts",
    "start": "nodemon",
    "test:ci": "run-s test:dependency",
    "test:dependency": "depcruise src -v",
    "ts:esm": "node --loader ts-node/esm --experimental-specifier-resolution=node",
    "type-check": "tsc --noEmit",
    "watch": "nodemon",
    "postinstall": "simple-git-hooks",
    "format": "run-s prettier:format eslint:format",
    "prettier:format": "prettier \"**/*.{js,jsx,ts,tsx,json,yml,yaml,md,html,gql}\" --cache --write ./packages",
    "prettier:validate": "prettier --check \"**/*.{js,jsx,ts,tsx,json,yml,yaml,md,html}\"",
    "eslint:format": "eslint \"**/*.{ts,tsx}\" --fix --cache",
    "eslint:validate": "eslint \"**/*.{ts,tsx}\" --cache"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,yml,yaml,html,md,gql}": [
      "prettier --cache --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix --cache",
      "prettier --cache --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "nodemonConfig": {
    "delay": 600,
    "exec": "pnpm run ts:esm src/index.ts",
    "ext": "ts,tsx",
    "ignore": [
      "dist/*",
      "test/*",
      "docs/*"
    ],
    "watch": [
      "src/**/*"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^8.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "cross-env": "^7.0.3",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "generate-changelog": "^1.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "sort-package-json": "^2.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "pnpm": ">=7"
  }
}
